<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="100"
        Height="100" Width="400"
        x:Class="VTACheckClock.EmployeeCheckWindow"
        Title="Checadas de Prueba"
        CanResize="False">
  <StackPanel>
    <TextBlock Text="Ingrese el ID del empleado:" Margin="10 0 0 0"/>
    <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
      <TextBox Name="txtEmployeeId" Height="30" Width="200" HorizontalAlignment="Center"/>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 10 10">
        <Button Name="EntryButton" Content="Entrada" Classes="btn-primary" Margin="5"/>
        <Button Name="ExitButton" Content="Salida" Classes="btn-primary" Margin="5"/>
      </StackPanel>
    </StackPanel>
  </StackPanel>
</Window>
